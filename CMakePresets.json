{
    "version": 3,
    "cmakeMinimumRequired":
    {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets":
    [
        {
            "name": "visual-studio-17-2022-x64",
            "displayName": "Visual Studio 2022",
            "description": "Build for visual studio 2022 in x64.",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "build/${presetName}",
            "architecture":
            {
                "value": "x64",
                "strategy": "set"
            },
            "toolset":
            {
                "value": "host=x64",
                "strategy": "set"
            }
        },
        {
            "name": "gdb-release",
            "displayName": "GDB Release",
            "description": "Build using gcc and g++ release.",
            "generator": "Ninja",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "gdb-debug",
            "displayName": "GDB Debug",
            "description": "Build using gcc and g++ debug.",
            "generator": "Ninja",
            "binaryDir": "build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        }
    ],


    "buildPresets":
    [
        {
            "name": "visual-studio-release",
            "displayName": "Release",
            "configurePreset": "visual-studio-17-2022-x64",
            "configuration": "Release",
            "verbose": false,
            "targets": ["Zephyr"]
        },
        {
            "name": "visual-studio-debug",
            "displayName": "Debug",
            "configurePreset": "visual-studio-17-2022-x64",
            "configuration": "Debug",
            "verbose": true,
            "targets": ["Zephyr"]
        },
        {
            "name": "visual-studio-clean-debug",
            "displayName": "Clean and Debug",
            "configurePreset": "visual-studio-17-2022-x64",
            "configuration": "Debug",
            "cleanFirst": true,
            "verbose": true,
            "targets": ["Zephyr"]
        },


        {
            "name": "gdb-release",
            "displayName": "Release",
            "configurePreset": "gdb-release",
            "configuration": "Release",
            "verbose": false,
            "targets": ["Zephyr"]
        },
        {
            "name": "gdb-debug",
            "displayName": "Debug",
            "configurePreset": "gdb-debug",
            "configuration": "Debug",
            "verbose": true,
            "targets": ["Zephyr"]
        },
        {
            "name": "gdb-clean-debug",
            "displayName": "Clean and Debug",
            "configurePreset": "gdb-debug",
            "configuration": "Debug",
            "cleanFirst": true,
            "verbose": true,
            "targets": ["Zephyr"]
        }
    ]
}